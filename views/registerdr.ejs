<title>E-Hospital | Doctor Register</title>
<title>E-Hospital | Patient Register</title>
<style>
  body {
    margin: 0;
    height: 100%;
  }

  .bg {
    background-image: url('/public/images/landing.jpg');
    background-size: cover;
    height: 200vh;
    background-repeat: no-repeat;
  }

  .display {
    color: #fff;
    margin-top: 10%;
    margin-left: 0%;
    border: 2px solid white;
    opacity: 100%;
    background-color: rgba(255, 255, 255, 0.096);
  }

  .hvr-overline-from-center:before {
    background: white;
  }

  .hvr-bounce-to-bottom:before {
    background: #0e0f0f71;
  }
</style>

<body>
  <div class="bg">
    <div class="row mt-5">
      <div class="col-md-4 m-auto">
        <div class="display card card-body hvr-bounce-to-bottom hvr-icon-pulse-grow">
          <h3 class="text-center mb-3">
            <img class="logo hvr-wobble-horizontal" src="/public/images/logo.svg" height="" width=""
              style="margin-top:0%;margin-bottom:5%">
            <h4 class="text-center mb-3"><i class="fas fa-user-plus hvr-icon"></i> Doctor Register
            </h4>
            <hr style="background: white">
            <%- include('./partials/messages.ejs'); %>
            <form action="/doctor/Dregister" method="POST">
              <div class="form-group">
                <label class="lead" for="regNumber">Registration Number</label>
                <input type="name" id="regNumber" name="regNumber" class="form-control hvr-skew-forward"
                  placeholder="Enter registration number" value="<%= typeof name != 'undefined' ? name : '' %>" />
              </div>
              <div class="form-row">
                <!--Used to inplace two inputs or more in one row-->
                <div class="form-group col-md-6">
                  <label class="form-control-label lead" for="salutation">Salutation</label>
                  <select name="salutation" id="salutation" class="form-control custom-select hvr-skew-forward">
                    <option value="Dr.">Dr.</option>
                    <option value="Asso. Prof.">Asst. Prof.</option>
                    <option value="Prof">Prof</option>
                    <option value="Asst. Prof. Dr.">Asst. Prof. Dr.</option>
                    <option value="Prof. Dr.">Prof. Dr.</option>
                    <option value="Tech">Tech</option>
                    <option value="Acu.">Acu.</option>
                    <option value="Mr.">Mr.</option>
                    <option value="Ms.">Ms.</option>
                    <option value="Pt.">Pt.</option>
                  </select>
                </div>
                <div class="form-group col-md-6">
                  <label class="lead" for="name">Doctor Name</label>
                  <input type="name" id="name" name="name" class="form-control hvr-skew-forward"
                    placeholder="Enter  Full Name" value="<%= typeof name != 'undefined' ? name : '' %>" />
                </div>
              </div>
              <div class="form-group">
                <label class="lead" for="email">Email</label>
                <input type="email" id="email" name="email" class="form-control hvr-skew-forward"
                  placeholder="Enter Email" value="<%= typeof email != 'undefined' ? email : '' %>" />
              </div>
              <div class="form-row">
                <div class="form-group col-md-6">
                  <label class="lead" for="password">Password</label>
                  <input type="password" id="password" name="password" class="form-control hvr-skew-forward"
                    placeholder="Create Password" value="<%= typeof password != 'undefined' ? password : '' %>" />
                </div>
                <div class="form-group col-md-6">
                  <label class="lead" for="password2">Confirm Password</label>
                  <input type="password" id="password2" name="password2" class="form-control hvr-skew-forward"
                    placeholder="Confirm Password" value="<%= typeof password2 != 'undefined' ? password2 : '' %>" />
                </div>
              </div>
              <div class="form-row">
                <div class="form-group col-md-6">
                  <label class="lead" for="phonenumber">Phone Number</label>
                  <input type="phonenumber" id="phonenumber" name="phonenumber" class="form-control hvr-skew-forward"
                    placeholder="Enter phone number" pattern="[0-9]{10}"
                    value="<%= typeof phonenumber != 'undefined' ? phonenumber : '' %>" />
                </div>
                <div class="form-group col-md-6">
                  <label class="lead" for="experience">Years of Experience</label>
                  <input type="number" id="experience" name="experience" class="form-control hvr-skew-forward"
                    placeholder="Enter years of experience"
                    value="<%= typeof experience != 'undefined' ? experience : '' %>" />
                </div>
              </div>
              <div class="form-group ">
                <label class="lead" for="speciality">Speciality</label>
                <select name="speciality" id="speciality" class="form-control custom-select hvr-skew-forward">
                  <option value="Allergy & Immunology">Allergy & Immunology</option>
                  <option value="Anesthesiology">Anesthesiology</option>
                  <option value="Colon & Rectal Surgery">Colon & Rectal Surgery</option>
                  <option value="Dermatology">Dermatology</option>
                  <option value="Neurological Surgery">Neurological Surgery </option>
                  <option value="Neurology & Psychiatry">Neurology & Psychiatry</option>
                  <option value="Nephrology">Nephrology</option>
                  <option value="Nuclear Medicine">Nuclear Medicine</option>
                  <option value="Obstetrics & Gynecology">Obstetrics & Gynecology</option>
                  <option value="Oncology">Oncology</option>
                  <option value="Ophthalmology">Ophthalmology</option>
                  <option value="Orthopaedic Surgery">Orthopaedic Surgery</option>
                  <option value="Otolaryngology – Head and Neck Surgery">Otolaryngology – Head and Neck Surgery</option>
                  <option value="Pathology">Pathology</option>
                  <option value="Pediatrics">Pediatrics</option>
                  <option value="Physical Medicine & RehabilitationPt.">Physical Medicine & Rehabilitation</option>
                  <option value="Plastic Surgery">Plastic Surgery</option>
                  <option value="Radiology">Radiology</option>
                  <option value="Rheumatology">Rheumatology</option>
                  <option value="Surgery">Surgery</option>
                  <option value="Thoracic Surgery">Thoracic Surgery</option>
                  <option value="Urology">Urology</option>

                </select>
              </div>
              <div class="form-row">
                <div class="form-group col-md-6">
                  <label class="lead" for="qualification">Qualification</label>
                  <input type="name" id="qualification" name="qualification" class="form-control hvr-skew-forward"
                    placeholder="Enter your qualification"
                    value="<%= typeof qualification != 'undefined' ? qualification : '' %>" />
                </div>
                <div class="form-group col-md-6">
                  <label for="gender" class="form-control-label lead">Gender</label>
                  <select name="gender" id="gender" class="form-control custom-select hvr-">
                    <option name="male">Male</option>
                    <option name="female">Female</option>
                    <option name="others">Others</option>
                  </select>
                </div>
              </div>
              <div class="form-group">
                <label for="description" class="form-control-label lead">Description</label>
                <textarea name="description" class="form-control ckeditor hvr-bob"
                  placeholder="Tell something about yourself" cols="30" rows="6" id="description">
                </textarea>
              </div>
              <button type="submit" class="btn btn-primary btn-block">
                Register
              </button>
            </form>
            <hr style="background: white">
            <p class="lead mt-4">Have An Account? <a style="color: rgb(169, 238, 10)"
                href="/doctor/Dlogin"><b>Login</b></a></p>
        </div>
      </div>
    </div>
  </div>
</body>